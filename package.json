{
  "name": "nextjs-typescript-boilerplate",
  "version": "0.1.0",
  "author": "fsl0110",
  "description": "A Next.js TypeScript Boilerplate with Storybook, Testing Library, Cypress, Husky, ESLint, Prettier, ...",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --pretty --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint src --cache",
    "lint:fix": "eslint src --cache --fix",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watchall": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:coverage:serve": "serve ./.testreports",
    "test:clear-cache": "jest --clearCache",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o .storybook-static"
  },
  "lint-staged": [
    "yarn check-types",
    "yarn lint:check",
    "yarn format:check",
    "yarn test"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "i18next": "^20.3.1",
    "i18next-browser-languagedetector": "^6.1.1",
    "i18next-http-backend": "^1.2.6",
    "next": "10.2.3",
    "next-i18next": "^8.4.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.8.3",
    "react-i18next": "^11.10.0",
    "react-redux": "^7.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@cypress/react": "^5.9.1",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "@testing-library/jest-dom": "^5.13.0",
    "@testing-library/react": "^11.2.7",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^26.0.23",
    "@types/react": "17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "cypress": "^7.5.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.8.0-125",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.0",
    "prettier": "^2.3.1",
    "serve": "^12.0.0",
    "tailwindcss": "^2.1.4",
    "typescript": "4.2.4",
    "yarn": "^1.22.10"
  }
}
